{
    "fov": 90,
    "camera_height": 31,
    "camera_angle": -21,
    "output_size": [640, 480],
    "rescale": 3,
    "chunk_size_cm": 250,
    "chunk_size_px": 1000,
    "shuffle": true,
    "seed": 123456,

    "obstacle_class": 200,

    "paths": {
        "annotations_output_path": "./data/annotations/{splitname}",
        "images_output_path": "./data/images/{splitname}",
        "manual_annotations_input_path": "./examples/annotations",
        "manual_images_input_path": "./examples/images",
        "chunk_path": "./chunks",
        "chunk_file_pattern": "{chunk_type}_{variant}",
        "output_file_pattern": "image_{idx}.png"
    },

    "splits": {
        "train_split": {
            "size": 50,
            "fraction_synthetic": 0.5,
            "fraction_augmented": 0.5
        },
        "validation_split": {
            "size": 50,
            "fraction_synthetic": 0.5,
            "fraction_augmented": 0.5
        },
        "test_split": {
            "size": 50,
            "fraction_synthetic": 0.5,
            "fraction_augmented": 0.5
        }
    },
    "disturbances": [
        { "HiddenGroundRect": [] },
        { "BoxObstacle": [] },
        { "BoxObstacle": [] },
        { "Dust": [100000, 63] },
        { "Dust": [100000, 127] },
        { "Dust": [10000, 255] },
        { "RandomBrightness": [] },
        { "RandomClipMax": [] },
        { "RandomClipMax": [] },
        { "DrunkDriving": [] }
    ],
    
    "augmentation_config":{
        "start_line_rows": 3,
        "start_line_colums":25,
        "patch_size": 20,
        "translation_step": 25,
        "scale_step": 25,
        "rotation_step": 10,
        "img_write_path": "./augmented_data/images/image_",
        "mask_write_path": "./augmented_data/annotations/mask_",
        "img_input_path": "./examples/images/",
        "mask_input_path": "./examples/annotations/",
        "img_object_path": "img_overlay_path.png",
        "mask_object_path": "mask_overlay_path.png",
        "angle": 0,
        "offset_x": 400,
        "offset_y": 1000,
        "position_camera_x": 1400,
        "position_camera_y": 0,
        "overlay_mask_value": 250,
        "annotation_buffer": 25
    }
}
